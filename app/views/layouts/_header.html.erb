<header>  
    <nav class="navbar navbar-expand-sm navbar-dark">
        <%= link_to "Secret Lodge", root_url, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <% if logged_in? %>
                    <li class="nav-item">
                        <%= link_to "New post!", new_post_path, class: 'btn btn-secondary' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to current_user.name, '#', class: 'nav-link dropdown-toggle', role: 'button', id: 'dropdownMenuLink', 'data-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false' %>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                            <%= link_to "Edit profile", edit_user_path(current_user.id), class: 'dropdown-item' %>
                            <div class="dropdown-divider"></div>
                            <%= link_to "Log out", logout_path, method: :delete, class: 'dropdown-item' %>
                        </div>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to "Log in", login_path, class: 'nav-link' %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>
</header>

